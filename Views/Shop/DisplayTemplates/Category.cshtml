@model WebApplication3.Data.Entities.Category

<link rel="stylesheet" href="~/css/Category/category-card.css" asp-append-version="true" />

<a asp-controller="Shop" asp-action="Category" asp-route-id="@(Model.Slug)" style="text-decoration: none; color: currentColor">
    <div class="card mx-3 h-100 category" title="@Model.Description">
        <img src="@(Model.ImagesCsv?.Split(',').FirstOrDefault())" class="card-img-top" alt="">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
        </div>
    </div>
</a>